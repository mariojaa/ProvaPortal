@model ProvaModel

<h3 class="display-7 text-center">Deseja realmente excluir a prova? <b>@Model.NomeArquivo</b>?</h3>
<br />
<form method="post" asp-controller="Provas" asp-action="DeletarProva" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger btn-block">Confirmar</button>
    <button class="btn btn-primary btn-block" asp-controller="Provas" asp-action="Index">Cancelar</button>
</form>