                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });

            $('#table-impressos').DataTable({
                "ordering": true,
                "paging": true,
                "searching": true,
                "pageLength": 10,
                "info": false,
                "lengthChange": false,
                "dom": 'lrtip',
