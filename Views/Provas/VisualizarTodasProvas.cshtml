            $('#myTabs a').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
                var targetTableId = $(this).attr("data-target-table");
                // Recarregue o DataTable na tabela ativa
                $('#' + targetTableId).DataTable().ajax.reload();
            });
        });
        $(document).ready(function () {
