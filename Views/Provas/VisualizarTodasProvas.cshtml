@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btnDeletarAdmin").click(function () {
                var id = $(this).data("value");
                $("#conteudomodal").load("/Provas/DeletarProvaAdministrador/" + id,
                    function () {
                        $('#exampleModal').modal("show");
                    }
                );
            });
        });
        $(".mensagem-temporaria").delay(2000).fadeOut("slow"); //alerta 2 segundos (2000)
        $(document).ready(function () {
            $(".btnAtualizarStatus").click(function () {
                var id = $(this).data("value");
                $.ajax({
                    url: "/Provas/ImprimirProva/" + id,
                    type: "POST",
                    success: function (data) {
                        if (data.success) {
                            // Atualização bem-sucedida
                            // Agora você pode realizar a ação de impressão
                            window.open(data.urlParaProva); // Abre a prova para impressão em uma nova guia/janela
                        } else {
                            // Lida com erros, se necessário
                            console.log(data.error);
                        }
                    },
                    error: function (error) {
                        // Lida com erros, se necessário
                        console.log(error);
                    }
                });
            });
        });
